<% layout("layouts/boilerplate") -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <!-- <br/><br/> -->
            <h3>Add New Listing</h3>
            <form  method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"
            >
                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="listing[title]" placeholder="Enter catchy title:" required>
                    <div class="valid-feedback">Title looks good!</div>
                </div>
                <div class="mb-3">  
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]"  class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter a short description!
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable">Upload Listing Image</label>
                    <input type="file" name="listing[image]" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select name="listing[category]" class="form-control" required>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing Pools">Amazig Pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="arctic">Arctic</option>
                    </select>
                    <div class="invalid-feedback">Please select a category!</div>
                </div>
               <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" class="form-control" placeholder="2000" required>
                    <div class="invalid-feedback">Price should be correct!</div>
                   </div>
                   <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" class="form-control" placeholder="Hyderabad" required>
                    <div class="invalid-feedback">Location should be correct!</div>
                   </div>
               </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" class="form-control" placeholder="India" required>
                    <div class="invalid-feedback">Country should be correct!</div>
                </div>
                <button class="btn btn-dark addNew mb-3">ADD</button>
            </form>
        </div> 
    </div>

